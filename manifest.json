{
    "name": "SmogKrk",
    "description": "Air pollution information.",
    "version": "0.4",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "img/icon_38.png",
        "default_title": "SmogKrk",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/libs/jquery.min.js", "js/background.js"],
        "persistent": false
    },
    "permissions": ["alarms", "storage", "notifications"],
    "icons": {
        "38": "img/icon_38.png",
        "64": "img/icon_64.png"
    }
}